<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedGreenButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/default_extrabold</item>
        <item name="android:background">@drawable/button_rounded_corners_green</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_state_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxStrokeWidth">@dimen/text_input_stroke_width</item>
        <item name="boxStrokeWidthFocused">@dimen/text_input_stroke_width</item>
        <item name="errorTextColor">@color/input_error</item>
        <item name="errorTextAppearance">@style/TextInputLayout.ErrorTextAppearance</item>
        <item name="boxStrokeErrorColor">@color/input_error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayout.ErrorTextAppearance">
        <item name="fontFamily">@font/default_semibold</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="maxLines">1</item>
    </style>

    <style name="ThemeOverlay.EditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/light_green</item>
    </style>

</resources>